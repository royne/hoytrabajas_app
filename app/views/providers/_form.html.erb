<div class="container">
  <%= simple_form_for(@provider) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :nit %>
      <%= f.input :contact_name %>
      <%= f.input :phone %>
      <%= f.simple_fields_for(:account_attributes) do |q| %>
        <%= q.input :bank_id, as: :select, collection: @banks, selected: :bank_id %>
        <%= q.input :number %>
      <% end %>
  
    </div>
  
    <div class="form-actions mt-3">
      <%= f.button :submit, class:"btn btn-sm btn-dark"  %>
    </div>
  <% end %>
</div>
